{
  "manifest_version": 3,
  "name": "Action Recorder",
  "version": "1.0",
  "description": "Records user actions for download.",
  "permissions": ["storage", "activeTab", "scripting", "downloads"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Action Recorder",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
